<%- include('header') %>
<%- include('components/navbar', { config: { title: '提问' } }) %>
<div data-page="ask" class="page toolbar-fixed">
  <div class="page-content">
    <%- include('components/notification') %>
    <form class="list-block" method="post" 
      action="<% if (topic) { -%>/ask/<%= topic._id %>/edit 
      <% } else { -%> /ask/create <% } -%>">
      <ul>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-input">
                <input type="text" value="<% if (topic) { -%><%= topic.title %> <% } -%>" name="title" placeholder="请输入标题">
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-input">
                <textarea id="J_askContent" class="resizable" name="content" placeholder="问题的详细说明"><% if (topic) { -%> <%= topic.content %>
                <% } -%></textarea>
              </div>
            </div>
          </div>
        </li>
      </ul>
      <div class="content-block">
        <input type="submit" value="<% if (topic) { -%>保存<% } else { -%> 提问<% } -%>" class="button button-fill">
      </div>
    </form>
  </div>
</div>
<%- include('footer') %>
</body>
</html>